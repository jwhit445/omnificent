{
    "compilerOptions": {
      "target":"ES2018",
      "module": "commonjs",
      "lib": ["es2019"],
      "declaration": true,
      "strict": true,
      "noImplicitAny": true,
      "strictNullChecks": true,
      "noImplicitThis": true,
      "alwaysStrict": true,
      "noUnusedLocals": false,
      "noUnusedParameters": false,
      "noImplicitReturns": true,
      "noFallthroughCasesInSwitch": false,
      "inlineSourceMap": true,
      "inlineSources": true,
      "experimentalDecorators": true,
      "strictPropertyInitialization":false,
      "typeRoots": ["./node_modules/@types"],
      "types": ["node"],
      "outDir": "./dist/",
      "skipLibCheck": true,
      "baseUrl": ".",
      "paths": {
        "*": ["../../layers/dependencies/nodejs/node_modules/*"],
        "/opt/aws/*": ["../../layers/core/src/aws/*"],
        "/opt/datainterface/*": ["../../layers/core/src/datainterface/*"],
        "/opt/models/*": ["../../layers/core/src/models/*"],
        "/opt/utils/*": ["../../layers/core/src/utils/*"],
      }
    },
    "references": [
      { "path": "../../layers/core" }
    ],
    "exclude": [
      "node_modules",
      "dist"
    ]
  }